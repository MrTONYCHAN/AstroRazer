---
// src/components/payment-methods/WalletPayment.astro
---

<div class="bg-gray-900/50 rounded-lg p-6 border border-white/10">
    <h3 class="text-lg font-bold mb-4">Wallet</h3>

    <div class="space-y-4">
        <button class="w-full flex items-center bg-gray-800 p-4 rounded-lg border border-gray-700 hover:bg-gray-700 transition-colors">
            <img src="/placeholders/wallet-logo-1.svg" alt="Wallet 1" class="w-8 h-8 mr-4">
            <span>AstroPay</span>
        </button>
        <button class="w-full flex items-center bg-gray-800 p-4 rounded-lg border border-gray-700 hover:bg-gray-700 transition-colors">
            <img src="/placeholders/wallet-logo-2.svg" alt="Wallet 2" class="w-8 h-8 mr-4">
            <span>GalaxyPay</span>
        </button>
        <button class="w-full flex items-center bg-gray-800 p-4 rounded-lg border border-gray-700 hover:bg-gray-700 transition-colors">
            <img src="/placeholders/wallet-logo-3.svg" alt="Wallet 3" class="w-8 h-8 mr-4">
            <span>NebulaWallet</span>
        </button>
    </div>

    <button id="wallet-pay-btn" type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-4 rounded-lg text-lg transition-all duration-300 ease-in-out transform hover:scale-105 shadow-lg shadow-purple-500/20 mt-6 flex items-center justify-center">
        <span id="wallet-btn-text">Pay with Wallet</span>
        <svg id="wallet-loading-spinner" class="animate-spin -ml-1 mr-3 h-5 w-5 text-white hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
    </button>
</div>

<script>
    const walletPayBtn = document.getElementById('wallet-pay-btn');
    const walletBtnText = document.getElementById('wallet-btn-text');
    const walletLoadingSpinner = document.getElementById('wallet-loading-spinner');

    walletPayBtn?.addEventListener('click', async (e) => {
        e.preventDefault();

        walletPayBtn.disabled = true;
        walletBtnText.textContent = 'Processing...';
        walletLoadingSpinner.classList.remove('hidden');

        const url = new URL(window.location.href);
        const orderId = url.pathname.split('/').pop();

        try {
            const response = await fetch('/api/checkout/pay', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ 
                    orderId: orderId,
                    paymentMethod: 'wallet' 
                })
            });

            if (response.ok) {
                window.location.href = `/success?orderId=${orderId}`;
            } else {
                const { message } = await response.json();
                alert(`Payment failed: ${message}`);
            }
        } catch (error) {
            console.error('Payment error:', error);
            alert('An unexpected error occurred. Please try again.');
        } finally {
            walletPayBtn.disabled = false;
            walletBtnText.textContent = 'Pay with Wallet';
            walletLoadingSpinner.classList.add('hidden');
        }
    });
</script>
