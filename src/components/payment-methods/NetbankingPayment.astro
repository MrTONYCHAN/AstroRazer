---
// src/components/payment-methods/NetbankingPayment.astro
---

<div class="bg-gray-900/50 rounded-lg p-6 border border-white/10">
    <h3 class="text-lg font-bold mb-4">Netbanking</h3>

    <div class="space-y-3">
        <p class="text-sm text-gray-400 mb-2">Select your bank:</p>
        <button class="w-full text-left bg-gray-800 p-3 rounded-md border border-gray-700 hover:bg-gray-700 transition-colors">
            Starlight Bank
        </button>
        <button class="w-full text-left bg-gray-800 p-3 rounded-md border border-gray-700 hover:bg-gray-700 transition-colors">
            Eclipse Financial
        </button>
        <button class="w-full text-left bg-gray-800 p-3 rounded-md border border-gray-700 hover:bg-gray-700 transition-colors">
            Galaxy Trust Bank
        </button>
        <button class="w-full text-left bg-gray-800 p-3 rounded-md border border-gray-700 hover:bg-gray-700 transition-colors">
            Comet Credit Union
        </button>
    </div>

    <button id="netbanking-pay-btn" type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-4 rounded-lg text-lg transition-all duration-300 ease-in-out transform hover:scale-105 shadow-lg shadow-purple-500/20 mt-6 flex items-center justify-center">
        <span id="netbanking-btn-text">Proceed to Bank</span>
        <svg id="netbanking-loading-spinner" class="animate-spin -ml-1 mr-3 h-5 w-5 text-white hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
    </button>
</div>

<script>
    const netbankingPayBtn = document.getElementById('netbanking-pay-btn');
    const netbankingBtnText = document.getElementById('netbanking-btn-text');
    const netbankingLoadingSpinner = document.getElementById('netbanking-loading-spinner');

    netbankingPayBtn?.addEventListener('click', async (e) => {
        e.preventDefault();

        netbankingPayBtn.disabled = true;
        netbankingBtnText.textContent = 'Redirecting...';
        netbankingLoadingSpinner.classList.remove('hidden');

        const url = new URL(window.location.href);
        const orderId = url.pathname.split('/').pop();

        // In a real scenario, you would redirect to the bank's page.
        // Here, we'll simulate the process and directly call the payment API.

        try {
            const response = await fetch('/api/checkout/pay', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ 
                    orderId: orderId,
                    paymentMethod: 'netbanking' 
                })
            });

            if (response.ok) {
                window.location.href = `/success?orderId=${orderId}`;
            } else {
                const { message } = await response.json();
                alert(`Payment failed: ${message}`);
            }
        } catch (error) {
            console.error('Payment error:', error);
            alert('An unexpected error occurred. Please try again.');
        } finally {
            netbankingPayBtn.disabled = false;
            netbankingBtnText.textContent = 'Proceed to Bank';
            netbankingLoadingSpinner.classList.add('hidden');
        }
    });
</script>
