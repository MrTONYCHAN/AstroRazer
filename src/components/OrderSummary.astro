---
const { order } = Astro.props;

const subtotal = 450.00;
const taxes = 30.50;
const shipping = 15.00;
const total = subtotal + taxes + shipping;
---

<div class="bg-gray-800/80 rounded-2xl shadow-xl p-6 backdrop-blur-lg border border-white/10">
  <h2 class="text-2xl font-bold text-white mb-6">Order Summary</h2>
  <div class="space-y-4">
    <div class="flex justify-between items-center">
      <p class="text-gray-400">Subtotal</p>
      <p class="text-white font-medium">${subtotal.toFixed(2)}</p>
    </div>
    <div class="flex justify-between items-center">
      <p class="text-gray-400">Taxes</p>
      <p class="text-white font-medium">${taxes.toFixed(2)}</p>
    </div>
    <div class="flex justify-between items-center">
      <p class="text-gray-400">Shipping</p>
      <p class="text-white font-medium">${shipping.toFixed(2)}</p>
    </div>
    <div class="border-t border-gray-700 my-4"></div>
    <div class="flex justify-between items-center text-xl">
      <p class="text-white font-bold">Total</p>
      <p class="text-purple-400 font-bold">${total.toFixed(2)}</p>
    </div>
  </div>
</div>
